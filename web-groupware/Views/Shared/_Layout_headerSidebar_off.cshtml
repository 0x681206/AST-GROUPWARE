@using Microsoft.AspNetCore.Http
@using Microsoft.Extensions.Configuration
@using web_groupware.Utilities
@inject IConfiguration Configuration
@{
#pragma warning disable CS8600, CS8601, CS8602, CS8604, CS8618, CS8629
}
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - web_groupware</title>

    <link rel="stylesheet" href="~/css/web_groupware.styles.css" asp-append-version="true" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/material-design-icons/materialdesignicons.min.css" rel="stylesheet" />
    <link href="~/css/app.min.css" rel="stylesheet" />
    <link href="~/css/icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/colorbox/colorbox.css" asp-append-version="true" />
    <link rel="icon" href="~/favicon.ico" />
    @*bootstrap*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    @*datatables*@
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">

    @RenderSection("Styles", required: false)
</head>

<body class="loading p-0" style="background-color:white;">
    <main role="main" class="">
        @RenderBody()
    </main>
    <style>
    </style>
    <!-- App js -->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/app.min.js"></script>

    <script src="~/js/moment.min.js"></script>
    <script src="~/js/vendor.min.js"></script>
    <script src="~/js/jquery.scrollto.min.js"></script>
    <script src="~/js/jquery.todo.js"></script>

    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.20.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    <script type="text/javascript" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    @*colorbox*@
    <script type="text/javascript" src="~/lib/colorbox/jquery.colorbox.js"></script>
    <script type="text/javascript" src="~/lib/colorbox/jquery.colorbox-ja.js"></script>
    @*colorbox*@
    <script type="text/javascript" asp-append-version="true">
        var baseUrl = @Url.Content("~/") ;
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
