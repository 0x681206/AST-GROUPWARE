@model IEnumerable<web_groupware.Models.ScheduleViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.schedule_type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.allday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.start_datetime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.end_datetime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.memo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.schedule_type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.allday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.start_datetime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.end_datetime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.memo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.schedule_no">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.schedule_no">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.schedule_no">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
